extend layout 

block layout-content 
    div.container.mx-5
        h1.text-center.border-bottom.p-2 #{title} 
        div.container.mx-2.mt-4
            div.row 
                div.col-md-8
                    div.row 
                        p.fw-bolder.col-md-4 API Url 
                        p.col-md-3.badge.bg-light.rounded-pill.text-dark.border.border-secondary /api/project/list
                    div.row
                        p.fw-bolder.col-md-4 Project Standard Object 
                        pre.col-md-8.border.border-secondary.bg-light.p-2.rounded-3!= projEg
            table.table.table-striped.mb-2.mx-auto
                thead
                    tr.table-dark.fs-6.text-center
                        th Property
                        th Type 
                        th Description
                        th Example
                tbody 
                    tr 
                        td
                            span.badge.bg-light.rounded-pill.text-dark.border.border-secondary ProjectName
                        td String 
                        td This is the name of your project
                        td My Portfolio Directory 
                    tr 
                        td
                            span.badge.bg-light.rounded-pill.text-dark.border.border-secondary Desc
                        td Long string 
                        td This is a detailed intoduction about the project.
                        td This is an admin management system for portfolio directory's CRUD function.
                    tr 
                        td
                            span.badge.bg-light.rounded-pill.text-dark.border.border-secondary Tag
                        td String
                        td It is formed by concatenating different elements in the
                            span.badge.bg-light.rounded-pill.text-dark.border.border-secondary tag
                            |&nbsp;.
                        td 
                            span.badge.bg-light.rounded-pill.text-dark.border.border-secondary html
                            |&nbsp;,&nbsp;
                            span.badge.bg-light.rounded-pill.text-dark.border.border-secondary css
                            |&nbsp;,&nbsp;
                            span.badge.bg-light.rounded-pill.text-dark.border.border-secondary javascript
                    tr 
                        td
                            span.badge.bg-light.rounded-pill.text-dark.border.border-secondary Img 
                        td String 
                        td Image names with extensions
                        td portfolio_screen.png
                    tr 
                        td
                            span.badge.bg-light.rounded-pill.text-dark.border.border-secondary Link 
                        td String
                        td This is a full url link, normally starting with http://
                        td http://myportfolio.com
                    tr
                        td
                            span.badge.bg-light.rounded-pill.text-dark.border.border-secondary Repo
                        td String
                        td This is a full url link, normally starting with http://
                        td https://github.com/FloraWebDesigner/5222_Portfolio
                    tr 
                        td
                            span.badge.bg-light.rounded-pill.text-dark.border.border-secondary CreatedDate
                        td Date 
                        td This is automatically generated by MongoDB in convenience to manage and track early project 
                        td 2024-01-01T00:00:00.000Z